<h1>Admin Control Panel</h1>
<h2>Manage Properties</h2>
<h3>Current Properties</h3>
<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Address</th>
					<th>ID</th>
				</tr>
			</thead>
			<tbody>
				<% @properties.each do |property| %>
					<tr>
						<td><%= property.name %></td>
						<td><%= property.address %></td>
						<td><%= property.id %></td>
					</tr>
				<% end %>
			</tbody>
		</table><br />
		<div class="col-sm-6 col-sm-offset-3">
			<h3>Add A Property</h3>
			<%=  render "properties/form" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<h2>Manage Units</h2>
	<h3>Current Units</h3>
		<table class="table">
			<thead>
				<tr>
					<th>Property</th>
					<th>Description</th>
					<th>Rent Charge</th>
					<th>Security Charge</th>
					<th>Security Paid</th>
					<th>Tenant</th>
				</tr>
			</thead>
			<tbody>
			<% @property.units.each do |unit| %>
				<tr>
						<td><%= unit.property %></td>
						<td><%= unit.description %></td>
						<td><%= unit.rent_charge %></td>
						<td><%= unit.security_charge %></td>
						<td><%= unit.security_paid %></td>
						<td><%= unit.user %></td>
					</tr>
					<% end %>
				</tbody>
		</table>
		<div class="col-md-6 col-md-offset-3">
			<h3>Add A Unit</h3>
			<%= render "units/form" %>
		</div>
	</div>
</div>
<h2>Manage Tenants</h2>
<h3>Current Tenants</h3>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Unit</th>
					<th>ID</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.name %></td>
						<td><%= user.email %></td>
						<td><%= user.unit %></td>
						<td><%= user.id %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
