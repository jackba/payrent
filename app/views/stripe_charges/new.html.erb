<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag stripe_charges_path do %>
     <div class="center">
       <h4>Click to pay rent!</h4>
       <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" 
       data-key="<%= @stripe_btn_data[:key] %>" 
       data-amount=<%= @stripe_btn_data[:amount] %> 
       data-description="<%= @stripe_btn_data[:description] %>" ></script>
    </div>
  <% end %>
  <br>
  <p class="center">Highbrook does not store your credit card data.</p>
  <%= link_to "Back", payments_path %>
 </div>
</div>
