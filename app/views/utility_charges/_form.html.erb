<div class="formbox">
<%= form_for(@utility_charge) do |f| %>
  <% if @utility_charge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@utility_charge.errors.count, "error") %> prohibited this utility_charge from being saved:</h2>

      <ul>
      <% @utility_charge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :utility_name %><br>
    <%= f.text_field :utility_name, class: 'form-control', autofocus: true %>
