    <%= f.label :property_id %><br>
    <%= f.collection_select :property_id, @properties, :id, :name, {:prompt => "Select a Property"}, {:class => 'form-control'} %>
  </div>
   <div class="form-group">
     <%= f.label :tenant_count %>
     <%= f.text_field :tenant_count, class: 'form-control', placeholder: "Number of tenants" %>
